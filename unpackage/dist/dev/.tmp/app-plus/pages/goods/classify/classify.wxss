
.fixed {
	position: fixed;
	z-index: 99;
}
.VerticalNav.nav {
	width: 200rpx;
	white-space: initial;
}
.VerticalNav.nav .cu-item {
	width: 100%;
	text-align: center;
	margin: 0;
	border: none;
	height: 84rpx;
	position: relative;
}
.VerticalNav.nav .action {
	width: 100%;
	text-align: center;
	background-color: #fff;
	color: #a500d3;
	border: none;
	height: 84rpx;
	position: relative;
}
.VerticalNav.nav .cu-item.cur {
	background-color: #f1f1f1;
}
.VerticalNav.nav .cu-item.cur::after {
	content: '';
	width: 8rpx;
	height: 30rpx;
	border-radius: 10rpx 0 0 10rpx;
	position: absolute;
	background-color: currentColor;
	top: 0;
	right: 0rpx;
	bottom: 0;
	margin: auto;
}
.VerticalBox {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
}
.VerticalMain {
	background-color: #fff;
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
}
.list {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-flex-wrap: wrap;
	        flex-wrap: wrap;
}
.li-image {
	width: 70rpx;
	height: 70rpx;
} 

