	-webkit-box-align: start;
	-webkit-align-items: flex-start;
	        align-items: flex-start;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	padding: 32rpx;
	background: #fff;
}
.list-view .li-view .image {
	width: 180rpx;
	height: 180rpx;
	margin-right: 20rpx;
	border-radius: 10rpx;
}
.title-view {
	width: 100%;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	font-size: 28rpx;
}
.title-view .cu-tag {
	margin-right: 15rpx;
	font-size: 24rpx;
}
.text-view {
	width: 100%;
	font-size: 24rpx;
	color: #535353;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
