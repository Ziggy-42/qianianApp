
.header {
	position: fixed;
	width: 100%;
}
.tab2-view {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	padding: 0rpx 135rpx;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	height: 100rpx;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
}
.tab2-view .tab-btn {
	width: 123rpx;
	height: 52rpx;
	border-radius: 26rpx;
	font-size: 28rpx;
	line-height: 52rpx;
	text-align: center;
	color: #9e9e9e;
}
.tab2-view .action {
	background-color: #d2eaff;
	color: #0088fe;
}
