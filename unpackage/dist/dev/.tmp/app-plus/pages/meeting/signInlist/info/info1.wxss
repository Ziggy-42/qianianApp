
.card-view {
	width: 698rpx; 
	background-color: #ffffff;
	border-radius: 20rpx;
	margin: auto;
	margin-top: 35rpx;
	overflow: hidden;
	padding: 20rpx 0rpx;
}
.qrcode {
	width: 348rpx;
	height: 347rpx;
	margin: 30rpx auto;
}
.text-view {
	width: 100%; 
	color: #2f2f2f;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
}
.text-view .icon {
	width: 30rpx;
	height: 30rpx;
	margin-right: 25rpx;
}
.solid-view {
	height: 60rpx;
	border-bottom: #eee dashed 1rpx;
}
.down-view {
	padding: 0rpx 40rpx 20rpx;
	line-height: 70rpx;
	font-size: 30rpx;
	color: #2f2f2f;
}

