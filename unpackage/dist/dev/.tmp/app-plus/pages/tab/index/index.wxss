.swiper-vai {
	height: 316rpx;
	/* background-image: linear-gradient(0deg, #9a5ddf 0%, #9d7ae0 100%); */
}
.screen-swiper {
	width: 698rpx;
	height: 316rpx;
	background-color: #fbf1fe;
	border-radius: 16rpx;
	overflow: hidden;
	margin: auto;
}
.list {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	-webkit-flex-wrap: wrap;
	        flex-wrap: wrap;
	padding: 30rpx;
}
.list-view {
	width: 335rpx;
	height: 510rpx;
	background-color: #eeeeee;
	border-radius: 16rpx;
	overflow: hidden;
	position: relative;
}
.ven-view {
	position: absolute;
	top: 0rpx;
	width: 100%;
	height: 100%;
	padding: 15rpx;
	background: rgba(0, 0, 0, 0.1);
}
.list-viewbg {
	width: 100%;
	height: 100%;
}
.ven-view .cu-capsule {
	font-size: 21rpx;
}
.ven-down {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
}
.ven-down-avatar {
	width: 64rpx;
	height: 64rpx;
	margin-right: 10rpx;
}
.ven-down-name {
	width: 100rpx;
	font-size: 24rpx;
	color: #fffefe;
	/* border: solid #000 1upx; */
}
.ven-down-xin {
	width: 40rpx;
	height: 40rpx;
	margin-right: 10rpx;
}
.ven-down-num {
	width: 60rpx;
	font-size: 23rpx;
	color: #fffefe;
	/* border: solid #000 1upx; */
}
.cart {
	width: 130rpx;
	height: 130rpx;
	border-radius: 1000rpx;
	background-color: #ffffff;
	box-shadow: 0rpx 10rpx 15rpx 1rpx rgba(204, 204, 204, 0.39);
	position: fixed;
	right: 30rpx;
	bottom: 150rpx;
}
.cart image {
	width: 100%;
	height: 100%;
}

