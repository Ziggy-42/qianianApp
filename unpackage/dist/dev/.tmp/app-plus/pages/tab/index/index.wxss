/* 搜索 */
.search-view {
	height: 100rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	padding: 0rpx 44rpx;
	background: rgba(0, 0, 0, 0);
}
.search-view .search-form {
	width: 609rpx;
	height: 62rpx;
	background-color: #f5f5f5;
	border-radius: 31rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	padding-left: 29rpx;
	font-size: 36rpx;
	color: #b5b5b5;
}
.search-view .search-form input {
	font-size: 24rpx;
	margin-left: 20rpx;
}
