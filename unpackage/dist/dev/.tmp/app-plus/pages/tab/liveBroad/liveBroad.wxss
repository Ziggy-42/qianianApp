
page {
	background-color: #ffffff;
}
.header {
	height: 410rpx;
}
.vheader {
	background-image: -webkit-linear-gradient(bottom, #9a5ddf 0%, #9d7ae0 100%);
	background-image: linear-gradient(0deg, #9a5ddf 0%, #9d7ae0 100%);
}
.swiper-vai {
	height: 300rpx;
	background-image: -webkit-linear-gradient(bottom, #9a5ddf 0%, #9d7ae0 100%);
	background-image: linear-gradient(0deg, #9a5ddf 0%, #9d7ae0 100%);
}
.screen-swiper {
	width: 698rpx;
	height: 320rpx;
	background-color: #fbf1fe;
	border-radius: 16rpx;
	overflow: hidden;
	margin: auto;
}
.list {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	-webkit-flex-wrap: wrap;
	        flex-wrap: wrap;
	padding: 30rpx;
}
.list-view {
	width: 335rpx;
	height: 510rpx;
	background-color: #eeeeee;
	border-radius: 16rpx;
	overflow: hidden;
	position: relative;
	margin-bottom: 20rpx;
}
.ven-view {
	position: absolute;
	top: 0rpx;
	width: 100%;
	height: 100%;
	padding: 15rpx;
	background: rgba(0, 0, 0, 0.1);
}
.list-viewbg {
	width: 100%;
	height: 100%;
}
.ven-view .cu-capsule {
	font-size: 21rpx;
}
.ven-down {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
}
.ven-down-avatar {
	width: 64rpx;
	height: 64rpx;
	margin-right: 10rpx;
}
.ven-down-name {
	width: 100rpx;
	font-size: 24rpx;
	color: #fffefe;
	/* border: solid #000 1upx; */
}
.ven-down-xin {
	width: 40rpx;
	height: 40rpx;
	margin-right: 10rpx;
}
.ven-down-num {
	width: 60rpx;
	font-size: 23rpx;
	color: #fffefe;
	/* border: solid #000 1upx; */
}
.texty {
	font-size: 32rpx;
	color: #999999;
}
.tab-action {
	font-size: 38rpx;
	color: #2f2f2f;
}
.tab-action .nav-bottom {
	width: 37rpx;
	height: 10rpx;
	background-color: #b701e5;
	border-radius: 115rpx;
	margin: auto;
}
.nav .cu-item {
	line-height: 35px;
}
.meg-view {
	text-align: center;
	font-size: 20rpx;
	position: relative;
}
.meg-view image {
	width: 32rpx;
	height: 30rpx;
}
.search-view {
	width: 407rpx;
	height: 58rpx;
	border-radius: 29rpx;
}

