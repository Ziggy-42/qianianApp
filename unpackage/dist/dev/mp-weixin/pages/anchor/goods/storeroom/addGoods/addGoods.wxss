
page {
	background: #f5f5f5;
}
.form-group {
	height: 112rpx;
	padding: 10rpx 43rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	background: #ffffff;
	border-bottom: solid 1rpx #ebebeb;
}
.form-group label {
	width: 210rpx;
}
.form-group .right {
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
}
.form-group .right input {
	width: 100%;
	height: 100rpx;
	font-size: 28rpx;
	text-align: right;
	padding: 10rpx 0;
}
.placeholder {
	font-size: 28rpx;
	color: #c6c6c6;
	text-align: right;
}
.upimg-view {
	border-bottom: solid #eeeeee 1rpx;
	padding: 0rpx 20rpx 10rpx;
}
.cu-form-group {
	padding: 2rpx 44rpx;
}
.card-view {
	width: 712rpx;
	margin: auto;
	background: #fff;
	border-radius: 20rpx;
	overflow: hidden;
}
.title {
	height: 80rpx;
	line-height: 80rpx;
	padding-left: 53rpx;
	font-size: 26rpx;
	color: #9f9f9f;
}
.card-title {
	height: 105rpx;
	line-height: 105rpx;
	padding-left: 43rpx;
	font-size: 30rpx;
	color: #000000;
}
.no-border {
	border: none;
}
.btn {
	margin: 40rpx 0;
	font-size: 28rpx;
	color: #fff;
	text-align: center;
	line-height: 80rpx;
	height: 80rpx;
	background-color: #b701e5;
	border-radius: 40rpx;
	position: relative;
}
.btn_hover {
	top: 5rpx;
}

