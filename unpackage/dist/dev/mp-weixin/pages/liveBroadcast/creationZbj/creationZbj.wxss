
.page {
	height: 100vh;
}
.w-bg {
	min-height: 100%;
	background-color: rgba(0, 0, 0, 0.2);
}
.fm-view {
	width: 268rpx;
	height: 268rpx;
	background-color: rgba(255, 255, 255, 0.4);
	border-radius: 14rpx;
	margin: auto;
	text-align: center;
	color: #fff;
	/* padding-top: 80upx; */
	font-size: 32rpx;
}
.fm-view .cuIcon-add {
	font-size: 70rpx;
	font-weight: 550;
	margin-bottom: 20rpx;
}
.live-title {
	width: 426rpx;
	height: 80rpx;
	border-radius: 1rpx;
	margin: auto;
	border-bottom: solid 1rpx #fff;
	color: #fff;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	margin-top: 20rpx;
}
.live-title input {
	width: 100%;
	font-size: 34rpx;
	text-align: center;
}
.liveTplder {
	font-size: 34rpx;
	color: #c5c5c5;
	text-align: center;
}
.w-view {
	width: 532rpx;
	height: 82rpx;
	background-color: rgba(255, 255, 255, 0.4);
	border-radius: 41rpx;
	margin: auto;
	padding: 35rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	font-size: 28rpx;
	color: #ffffff;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	margin-bottom: 25rpx;
}
.p-view {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	line-height: 90rpx;
	font-size: 28rpx;
	color: #ffffff;
	width: 532rpx;
	margin: auto;
	padding: 0rpx 24rpx;
}
.p-view .cuIcon-roundcheckfill {
	font-size: 37rpx;
}
.p-view .radio {
	border-radius: 100rpx;
	width: 30rpx;
	height: 30rpx;
	border: solid 2rpx #ffffff;
}
.cbtn {
	text-align: center;
	margin-top: 50rpx;
}
.cbtn .cu-btn {
	width: 342rpx;
	height: 72rpx;
	background-color: #b701e5;
	border-radius: 36rpx;
	font-size: 28rpx;
	color: #ffffff;
}
.fonttime {
	color: #212121;
	padding: 7rpx 5rpx;
	font-size: 22rpx;
}

