
page {
	background: #f3f3f3;
}
.header {
	position: fixed;
	width: 100%;
}
.tab2-view {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	padding: 0rpx 135rpx;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	height: 100rpx;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
}
.tab2-view .tab-btn {
	width: 123rpx;
	height: 52rpx;
	border-radius: 26rpx;
	font-size: 28rpx;
	line-height: 52rpx;
	text-align: center;
	color: #9e9e9e;
}
.tab2-view .action {
	background-color: #d2eaff;
	color: #0088fe;
}
.list-view {
	padding: 0rpx 25rpx;
}
.list-view .li-view {
	-webkit-box-align: start;
	-webkit-align-items: flex-start;
	        align-items: flex-start;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	padding: 32rpx;
	background: #fff;
}
.list-view .li-view .image {
	width: 157rpx;
	height: 157rpx;
	margin-right: 20rpx;
	border-radius: 10rpx;
}
.title-view {
	width: 100%;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	font-size: 30rpx;
	color: #2f2f2f;
}
.text-view {
	width: 100%;
	font-size: 24rpx;
	color: #535353;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
}
.text-view .icon {
	width: 30rpx;
	height: 30rpx;
	margin-right: 15rpx;
}
.rigcode {
	width: 170rpx;
	text-align: center;
	font-size: 22rpx;
	line-height: 31rpx;
	color: #4f74ff;
}
.rigcode image {
	width: 96rpx;
	height: 96rpx;
	margin-bottom: 10rpx;
}
.cu-dialog {
	width: 559rpx;
	height: 585rpx;
	background-color: #ffffff;
	border-radius: 16rpx;
	font-size: 32rpx;
	color: #9c9c9c; 
	overflow: initial;
}
.qrcode {
	width: 322rpx;
	height: 323rpx;
	margin-top: 90rpx;
	margin-bottom: 50rpx;
}
.cu-dialog  .close {
	position: absolute;
	bottom: -200rpx;
	width: 76rpx;
	height: 76rpx;
	left: 0;
	right: 0;
	margin: auto;
}

