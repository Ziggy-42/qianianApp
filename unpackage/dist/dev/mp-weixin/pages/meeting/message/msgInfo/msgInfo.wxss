
.list-view {
	width: 698rpx;
	margin: auto;
}
.list-view .title {
	height: 85rpx;
	line-height: 85rpx;
	font-size: 25rpx;
	color: #afafaf;
	padding-left: 10rpx;
}
.v-view {
	width: 100%;
	background: #fff;
	border-radius: 14rpx;
	overflow: hidden;
}
.v-view .li-view {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	height: 104rpx;
	font-size: 27rpx;
	color: #858585;
	border-bottom: solid #eeeeee 1rpx;
}

