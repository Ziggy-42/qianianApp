
page {
	background: #fff;
}
.UCenter-bg {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
	padding-top: 40rpx;
	overflow: hidden;
	position: relative;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	        flex-direction: column;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	color: #fff;
	font-weight: 300;
	text-shadow: 0 0 3px rgba(0, 0, 0, 0.3);
	height: 496rpx;
	background-image: -webkit-linear-gradient(131deg, #60b5fe 0%, #0088fe 100%);
	background-image: linear-gradient(-41deg, #60b5fe 0%, #0088fe 100%);
}
.username {
	font-size: 32rpx;
	color: #ffffff;
	font-weight: 550;
}
.UCenter-bg .png {
	width: 150rpx;
	height: 150rpx;
	border-radius: 1000rpx;
	margin-bottom: 30rpx;
}
