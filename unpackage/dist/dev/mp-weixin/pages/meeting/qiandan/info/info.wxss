
page {
	background-color: #f3f3f3;
}
.card-view {
	width: 698rpx;
	background-color: #ffffff;
	border-radius: 20rpx;
	margin: auto;
	margin-top: 35rpx;
	overflow: hidden;
	padding-bottom: 60rpx;
}
.qrcode {
	width: 206rpx;
	height: 206rpx;
	margin: 50rpx auto;
}
.text-view {
	width: 100%;
	font-size: 24rpx;
	color: #535353;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
}
.text-view .icon {
	width: 30rpx;
	height: 30rpx;
	margin-right: 25rpx;
}
.solid-view {
	height: 60rpx;
	border-bottom: #eee dashed 1rpx;
}
.down-view {
	padding: 40rpx;
	line-height: 60rpx;
	font-size: 28rpx;
	color: #2f2f2f;
}
.list {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
}
.list label {
	font-size: 25rpx;
	line-height: 55rpx;
	color: #a9a8a8;
}
.tar {
	padding-left: 10rpx;
}
.avatar {
	width: 100rpx;
	height: 100rpx;
	border-radius: 100rpx;
	margin-right: 23rpx;
}
.username {
	font-size: 30rpx;
	color: #2f2f2f;
}
.xianv {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	border-bottom: dashed 2rpx #eeeeee;
}
.xianv .yuan {
	width: 34rpx;
	height: 34rpx;
	background-color: #f3f3f3;
	border-radius: 1000rpx;
	position: relative;
	top: 14rpx;
}
.cu-dialog {
	width: 559rpx;
	height: 585rpx;
	background-color: rgba(0, 0, 0, 0);
	border-radius: 16rpx;
	font-size: 32rpx;
	color: #9c9c9c;
	overflow: initial;
}
.cu-dialog .close {
	position: absolute;
	bottom: -100rpx;
	width: 76rpx;
	height: 76rpx;
	left: 0;
	right: 0;
	margin: auto;
}
.maview {
	height: 436rpx;
	position: relative;
	background: #fff;
	border-radius: 20rpx;
}
.tishi {
	background-image: -webkit-linear-gradient(42deg, #1992fb 0%, #34baff 100%);
	background-image: linear-gradient(48deg, #1992fb 0%, #34baff 100%);
	border-radius: 22rpx;
	font-size: 28rpx;
	line-height: 48rpx;
	color: #ffffff;
	text-align: left;
	padding: 25rpx 48rpx;
}
.matext {
	width: 434rpx;
	height: 105rpx;
	line-height: 105rpx;
	background-color: #f0f2f8;
	font-size: 44rpx;
	color: #181818;
	margin: 64rpx auto 57rpx;
}

